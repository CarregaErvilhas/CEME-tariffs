{
    "type": "object",
    "properties": {
        "country_code": {
            "type": "string",
            "description": "ISO-3166 alpha-2 country code of the CEME that owns this Tariff.",
            "maxLength": 2,
            "default": "PT"
        },
        "party_id": {
            "type": "string",
            "description": "ID of the CEME that 'owns' this Tariff (following the ISO-15118 standard).",
            "maxLength": 3
        },
        "id": {
            "type": "string",
            "description": "Uniquely identifies the tariff within the CEMEs platform.",
            "maxLength": 36
        },
        "ceme_name": {
            "type": "string",
            "description": "The commercial name of the CEME with whom a UVE establishes a contract."
        },
        "tariff_name": {
            "type": "string",
            "description": "The name of the CEMEs tariff plan."
        },
        "currency": {
            "type": "string",
            "description": "ISO-4217 code of the currency of this tariff.",
            "maxLength": 3,
            "default": "EUR"
        },
        "tariff_alt_url": {
            "type": "string",
            "description": "URL to a web page that contains an explanation of the tariff information in human readable form.",
            "format": "uri"
        },
        "energy_mix": {
            "type": "boolean",
            "description": "If energy source comes from green production sources"
        },
        "token_type": {
            "anyOf": [
                {
                    "type": "boolean",
                    "description": "App"
                },
                {
                    "type": "boolean",
                    "description": "RFID Card"
                }
            ],
            "description": "Token.type of the Token for which this authorization is."
        },
        "Voltage": {
            "anyOf": [
                {
                    "type": "boolean",
                    "description": "Very High Voltage (VHV/MTA)"
                },
                {
                    "type": "boolean",
                    "description": "High Voltage (HV/AT)"
                },
                {
                    "type": "boolean",
                    "description": "Medium Voltage (MV/MT)"
                },
                {
                    "type": "boolean",
                    "description": "Special Low Voltage (SLV/BTE)"
                },
                {
                    "type": "boolean",
                    "description": "Normal Low Voltage (NLV/BT)"
                }
            ],
            "description": "Very High Voltage (VHV), High Voltage (HV), Medium Voltage (MV), Special Low Voltage (SLV) and Normal Low Voltage (NLV)"
        },
        "hourly_period": {
            "oneOf": [
                {
                    "type": "boolean",
                    "description": "Simple: 1 single period during the day, with no energy price differentiation."
                },
                {
                    "type": "boolean",
                    "description": "Bi-hourly: 2 periods during the day (off-peak and peak hours)"
                },
                {
                    "type": "boolean",
                    "description": "Tri-hourly: 3 periods during the day (peak hours, mid-peak hours, and off-peak hours)"
                }
            ],
            "description": "Hourly Period"
        },
        "cycle": {
            "oneOf": [
                {
                    "type": "boolean",
                    "description": "Daily cycle: the hourly periods are the same every day of the year."
                },
                {
                    "type": "boolean",
                    "description": "Weekly cycle: the hourly periods differ between weekdays and weekends."
                },
                {
                    "type": "boolean",
                    "description": "Simple: 1 single period during the day, with no energy price differentiation."
                }
            ],
            "description": "Cycle"
        },
        "elements": {
            "type": "array",
            "description": "List of Tariff Elements.",
            "items": {
                "type": "object",
                "properties": {
                    "price_components": {
                        "type": "array",
                        "description": "List of price components that describe the pricing of a tariff.",
                        "items": {
                            "type": "object",
                            "properties": {
                                "type": {
                                    "type": "string"
                                },
                                "price": {
                                    "type": "number"
                                },
                                "vat": {
                                    "type": "number"
                                },
                                "step_size": {
                                    "type": "integer"
                                }
                            },
                            "required": [
                                "type",
                                "price",
                                "step_size"
                            ]
                        }
                    },
                    "restrictions": {
                        "type": "object",
                        "properties": {
                            "start_time": {
                                "type": "string"
                            },
                            "end_time": {
                                "type": "string"
                            },
                            "day_of_week": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                },
                "required": [
                    "price_components"
                ]
            }
        },
        "last_updated": {
            "type": "string",
            "description": "Timestamp when this Tariff was last updated (or created).",
            "format": "date-time"
        }
    },
    "required": [
        "party_id",
        "id",
        "ceme_name",
        "tariff_name",
        "currency",
        "tariff_alt_url",
        "token_type",
        "Voltage",
        "hourly_period",
        "cycle",
        "elements",
        "last_updated"
    ]
}
