{
    "type": "object",
    "properties": {
        "country_code": {
            "type": "string",
            "description": "ISO-3166 alpha-2 country code of the CPO that owns this Tariff.",
            "maxLength": 2,
            "default": "PT"
        },
        "party_id": {
            "type": "string",
            "description": "ID of the CPO that 'owns' this Tariff (following the ISO-15118 standard).",
            "maxLength": 3
        },
        "id": {
            "type": "string",
            "description": "Uniquely identifies the tariff within the CPOâ€™s platform (and suboperator platforms).",
            "maxLength": 36
        },
        "currency": {
            "type": "string",
            "description": "ISO-4217 code of the currency of this tariff.",
            "maxLength": 3,
            "default": "EUR"
        },
        "type": {
            "type": "string",
            "enum": [
                "REGULAR",
                "AD_HOC_PAYMENT",
                "PROFILE_CHEAP",
                "PROFILE_FAST",
                "PROFILE_GREEN"
            ]
        },
        "tariff_alt_text": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "language": {
                        "type": "string"
                    },
                    "text": {
                        "type": "string"
                    }
                }
            }
        },
        "tariff_alt_url": {
            "type": "string",
            "format": "uri"
        },
        "min_price": {
            "type": "number"
        },
        "max_price": {
            "type": "number"
        },
        "elements": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "price_components": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "type": {
                                    "type": "string"
                                },
                                "price": {
                                    "type": "number"
                                },
                                "vat": {
                                    "type": "number"
                                },
                                "step_size": {
                                    "type": "integer"
                                }
                            },
                            "required": [
                                "type",
                                "price",
                                "step_size"
                            ]
                        }
                    },
                    "restrictions": {
                        "type": "object",
                        "properties": {
                            "start_time": {
                                "type": "string"
                            },
                            "end_time": {
                                "type": "string"
                            },
                            "day_of_week": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                },
                "required": [
                    "price_components"
                ]
            }
        },
        "last_updated": {
            "type": "string",
            "format": "date-time"
        }
    },
    "required": [
        "country_code",
        "party_id",
        "id",
        "currency",
        "elements",
        "last_updated"
    ]
}
